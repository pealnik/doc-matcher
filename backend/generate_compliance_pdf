#!/usr/bin/env python3
"""Thin wrapper to make the PDF generator invocable as a simple script.

Usage (from repo root or backend/):
  python3 backend/generate_compliance_pdf -i backend/results/<task_id>.json -o out.pdf
  ./backend/generate_compliance_pdf -i backend/results/<task_id>.json -f
"""
import sys

from pdf_generator import _cli_main


def main(argv=None):
    return _cli_main(argv or sys.argv[1:])


if __name__ == '__main__':
    raise SystemExit(main())
